        cout << "The point is at the origin." << endl;
    } else if (x > 0) {
        cout << (y > 0 ? "Quadrant I" : "Quadrant IV") << endl;
    } else {
        cout << (y > 0 ? "Quadrant II" : "Quadrant III") << endl;
    }

    return 0;
