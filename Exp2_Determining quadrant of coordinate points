//2. To accept a coordinate point in xy coordinate system and determine in which quadrant the coordinate points lie in?

#include <iostream>
using namespace std;

int main() {
    // Input coordinates
    double x, y;
    cout << "Enter x-coordinate: ";
    cin >> x;
    cout << "Enter y-coordinate: ";
    cin >> y;

    // Determine the quadrant
    if (x > 0 && y > 0) {
        cout << "The point is in Quadrant I." << std::endl;
    } else if (x < 0 && y > 0) {
        cout << "The point is in Quadrant II." << std::endl;
    } else if (x < 0 && y < 0) {
        cout << "The point is in Quadrant III." << std::endl;
    } else if (x > 0 && y < 0) {
        cout << "The point is in Quadrant IV." << std::endl;#include <iostream>


